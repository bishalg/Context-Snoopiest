---
interface Props {
  prev: any;
  next: any;
  editUrl: string;
  pdfUrl: string | null;
  base: string;
}

const { prev, next, editUrl, pdfUrl, base } = Astro.props;
import { GitHubIcon, DownloadIcon } from "../icons";
---

<div
  class="mt-16 pt-8 border-t border-black/5 dark:border-white/5 space-y-8 print:hidden"
>
  <!-- Secondary Actions -->
  <div
    class="flex flex-col sm:flex-row gap-4 justify-between items-center sm:items-start"
  >
    <a
      href={editUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="flex items-center gap-2 px-4 py-2 rounded-lg border border-black/5 dark:border-white/10 hover:border-cyan-500/30 hover:bg-cyan-500/5 transition-all text-sm font-medium text-slate-600 dark:text-slate-400 hover:text-cyan-600 dark:hover:text-cyan-400 group"
    >
      <GitHubIcon
        class="w-4 h-4 text-slate-400 group-hover:text-cyan-500 transition-colors"
      />
      View source
    </a>
    {
      pdfUrl ? (
        <a
          href={pdfUrl}
          download
          class="flex items-center gap-2 px-4 py-2 rounded-lg border border-black/5 dark:border-white/10 hover:border-cyan-500/30 hover:bg-cyan-500/5 transition-all text-sm font-medium text-slate-600 dark:text-slate-400 hover:text-cyan-600 dark:hover:text-cyan-400 group"
        >
          <DownloadIcon class="w-4 h-4 text-slate-400 group-hover:text-cyan-500 transition-colors" />
          Download PDF
        </a>
      ) : (
        <div class="hidden sm:block" />
      )
    }
  </div>

  <!-- Next/Previous Pagination -->
  <div class="flex flex-col sm:flex-row gap-4 justify-between">
    {
      prev ? (
        <a
          href={base.replace(/\/$/, "") + "/" + prev.link!.replace(/^\//, "")}
          class="group flex flex-col gap-1 p-4 rounded-xl border border-black/5 dark:border-white/10 hover:border-cyan-500/30 hover:bg-cyan-500/5 transition-all text-left flex-1"
        >
          <span class="text-xs font-bold text-slate-400 uppercase tracking-wider group-hover:text-cyan-500">
            Previous
          </span>
          <span class="font-bold text-slate-700 dark:text-slate-200 group-hover:text-cyan-600 dark:group-hover:text-cyan-400">
            ← {prev.text}
          </span>
        </a>
      ) : (
        <div class="flex-1" />
      )
    }

    {
      next && (
        <a
          href={base.replace(/\/$/, "") + "/" + next.link!.replace(/^\//, "")}
          class="group flex flex-col gap-1 p-4 rounded-xl border border-black/5 dark:border-white/10 hover:border-cyan-500/30 hover:bg-cyan-500/5 transition-all text-right items-end flex-1"
        >
          <span class="text-xs font-bold text-slate-400 uppercase tracking-wider group-hover:text-cyan-500">
            Next
          </span>
          <span class="font-bold text-slate-700 dark:text-slate-200 group-hover:text-cyan-600 dark:group-hover:text-cyan-400">
            {next.text} →
          </span>
        </a>
      )
    }
  </div>
</div>
