---
// Pipeline Load / Processing Intensity Chart
---
<div class="bg-white dark:bg-slate-900 p-6 rounded-2xl shadow-lg border border-slate-100 dark:border-white/10 my-8 not-prose">
    <h3 class="font-bold text-slate-800 dark:text-white mb-2">Processing Pipeline Load</h3>
    <p class="text-xs text-slate-500 dark:text-slate-400 mb-6">Execution density across the delivery lifecycle.</p>
    <div class="chart-container h-[300px] relative">
        <canvas id="pipelineLoadChart"></canvas>
    </div>
</div>

<script>
    import Chart from 'chart.js/auto';

    document.addEventListener('DOMContentLoaded', () => {
        // Chart Defaults
        Chart.defaults.font.family = "'Inter', sans-serif";
        Chart.defaults.color = '#64748B';
        
        const commonOptions = {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                tooltip: { padding: 12, cornerRadius: 8 },
                legend: { position: 'bottom', labels: { usePointStyle: true, padding: 20 } }
            }
        };

        const ctx2 = document.getElementById('pipelineLoadChart');
        if (ctx2) {
            new Chart(ctx2, {
                type: 'line',
                data: {
                    labels: ["Ingest", "Summarize", "Aggregate", "Prompt Build", "Video Gen"],
                    datasets: [{
                        label: 'Intensity',
                        data: [10, 45, 30, 60, 95],
                        borderColor: '#0F766E',
                        backgroundColor: 'rgba(15, 118, 110, 0.1)',
                        fill: true,
                        tension: 0.4,
                        pointBackgroundColor: '#FFFFFF',
                        pointBorderColor: '#0F766E',
                        pointBorderWidth: 2,
                        pointRadius: 4
                    }]
                },
                options: { ...commonOptions, scales: { y: { beginAtZero: true }, x: { grid: { display: false } } } }
            });
        }
    });
</script>
